{
  "name": "@raincatcher/logger",
  "version": "0.0.1",
  "description": "NPM package for logger in RainCatcher project",
  "types": "src/index.ts",
  "author": "feedhenry-raincatcher@redhat.com",
  "license": "Apache-2.0",
  "main": "src/",
  "scripts": {
    "clean": "del src/**/*.js src/**/*.map test/**/*.js test/**/*.map",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "test": "npm run clean && nyc mocha",
    "integration": "ts-node integration/index.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "check-coverage": true,
    "lines": 75,
    "functions": 100,
    "branches": 80
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.0",
    "@types/mocha": "^2.2.41",
    "@types/proxyquire": "^1.3.27",
    "del-cli": "^1.0.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.1",
    "proxyquire": "^1.8.0",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.4"
  },
  "dependencies": {
    "@types/chai": "^4.0.0",
    "bunyan": "^1.8.10",
    "chai": "^4.0.2",
    "tslint": "^5.4.3"
  }
}
